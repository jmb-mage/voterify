{
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js.map": true,
        "**/*.js": { "when": "$(basename).ts" }
    },

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "vetur.validation.template": false,
    "javascript.format.enable": false,
    "files.autoSave": "off",
    "eslint.trace.server": "messages"
}
